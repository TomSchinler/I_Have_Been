<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sca.ihavebeen.VerifyStartActivity"
    android:background="@color/background_gold">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verifyStartMessage"
        android:id="@+id/verifyMessage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/verifyPerson"
        android:text=""
        tools:text="Gina Schinler"
        android:layout_below="@+id/verifyMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:textStyle="bold|italic"
        android:textColor="@color/action_bar_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/verifyButton"
        android:layout_below="@+id/verifyPerson"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp" />
</RelativeLayout>
