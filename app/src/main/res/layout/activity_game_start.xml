<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sca.ihavebeen.GameStart"
    android:background="@color/background_gold">


    <Button
        style="?android:attr/borderlessButtonStyle"
        android:textStyle="bold|italic"
        android:textColor="@color/action_bar_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/randomSelectButton"
        android:id="@+id/randomSelectButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/randomSelectButton"
        android:id="@+id/fbFriendsListView"
        android:layout_centerHorizontal="true"
        android:background="@color/faded_red" />


</RelativeLayout>
