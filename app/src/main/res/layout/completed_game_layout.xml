<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/winnerName"
        tools:text="Tom Schinler"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/winnerScore"
        tools:text="1000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="33dp"
        android:layout_below="@+id/winnerName"
        android:layout_marginTop="2dp"
        android:layout_alignStart="@id/winnerName"
        android:layout_alignLeft="@+id/winnerName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="LOSE"
        android:id="@+id/winOrLose"
        android:layout_alignBottom="@+id/loserName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/loserName"
        tools:text="Gina Schinler"
        android:layout_alignTop="@+id/winnerName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/loserScore"
        tools:text="1000"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="33dp"
        android:layout_below="@+id/loserName"
        android:layout_alignRight="@+id/loserName"
        android:layout_alignEnd="@+id/loserName" />





</RelativeLayout>