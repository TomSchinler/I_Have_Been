<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sca.ihavebeen.LIActivity"
    android:background="@color/background_gold">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/LIeMail"
        android:hint="E-Mail"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/LIPassword"
        android:layout_alignLeft="@+id/LIPassword"
        android:layout_alignStart="@+id/LIPassword"
        android:background="@color/darker_gold"
        android:visibility="gone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/LIPassword"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/Password"
        android:background="@color/darker_gold"
        android:visibility="gone" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:textStyle="bold|italic"
        android:textColor="@color/action_bar_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Log_in"
        android:id="@+id/LIButton"
        android:layout_below="@+id/LIPassword"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/FbLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Log in With Facebook"
        android:layout_below="@+id/new_welcome_paragraph"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/new_Welcome_Text"
        android:id="@+id/newWelcomeText"
        android:layout_above="@+id/new_welcome_paragraph"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/new_welcome_paragraph"
        android:id="@+id/new_welcome_paragraph"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
