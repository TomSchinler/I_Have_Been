<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/background_gold"
    tools:context="com.example.sca.ihavebeen.AreYouReady">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Are You Ready?"
            android:id="@+id/areYouReadyTextView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="The score to beat is:"
            android:id="@+id/scoreToBeatText"
            android:layout_below="@+id/areYouReadyTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/scoreToBeatNumber"
            tools:text="1000"
            android:layout_below="@+id/scoreToBeatText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="bold|italic"
            android:textColor="@color/action_bar_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lets_do_this"
            android:id="@+id/letsDoThisButton"
            android:layout_below="@+id/scoreToBeatNumber"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp" />
    </RelativeLayout>
</FrameLayout>
