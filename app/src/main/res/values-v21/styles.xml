        <item name="colorPrimary">@color/action_bar_red</item>
        <item name="colorPrimaryDark">@color/darkerRed</item>
        <item name="colorAccent">@color/action_bar_red</item>
        <item name="android:statusBarColor">@color/action_bar_red</item>
    </style>


</resources>
